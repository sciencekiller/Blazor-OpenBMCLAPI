<p Style="display:inline-block">@tip : </p>
@if (isPassword)
{
    <InputPassword Placeholder=@placeHolder @bind-Value="@InternalValue" DebounceMilliseconds="0" Style="display:inline-block" />
}
else
{
    <Input Placeholder=@placeHolder @bind-Value="@InternalValue" DebounceMilliseconds="0" Style="display:inline-block" />
}
@code {
    [Parameter]
    public string tip { get; set; }
    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    private string InternalValue
    {
        get => Value;
        set
        {
            if (Value != value)
            {
                Value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }
    [Parameter]
    public string placeHolder { get; set; }
    [Parameter]
    public bool isPassword { get; set; } = false;
}
